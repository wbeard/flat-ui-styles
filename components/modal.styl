@import "../lib/colors"
@import "../lib/css3"
@import "../lib/positions"
@import "../lib/util"

.modal-window
	background #ccc
	background rgba(0,0,0,0.7)
	absolute(top, left)
	width 100%
	height 100%
	text-align center
	z-index 999
	font-family sans-serif
	&:after
		content ''
		inline-block()
		height 100%
		margin-right -0.25em
		vertical-align middle

.modal
	background clouds
	margin 0 auto
	inline-block()
	relative()
	min-width 500px
	min-height 300px
	border-radius(1px)
	box-shadow(0 0 5px midnight_blue)
	& > div
		box-sizing: border-box
	
.modal-header
	height 50px
	width 100%
	padding 5px
	text-align center
	color midnight_blue
	border-bottom 5px midnight_blue solid
	& h3
		font-size 24px
		line-height 30px
		font-weight bold
		margin 0
	
.modal-body
	padding 5px
	width 100%
	color black
	text-align center

.modal-footer
	height 50px
	width 100%
	absolute(bottom, left)
	padding 5px
	

	